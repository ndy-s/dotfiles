{
  // ======================
  // UI & Editor Settings
  // ======================
  "files.autoSave": "onFocusChange",
  "window.commandCenter": true,
  "workbench.colorTheme": "Dracula Theme",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.autoSurround": "languageDefined",
  "editor.autoClosingOvertype": "always",

  // ======================
  // Vim Core Settings
  // ======================
  "vim.leader": "<space>",
  "vim.useSystemClipboard": false,
  "vim.hlsearch": true,
  "vim.incsearch": true,

  // ======================
  // Normal Mode Keybindings
  // ======================
  "vim.normalModeKeyBindingsNonRecursive": [
    // --- Select / Duplicate ---
    { "before": ["<C-a>"], "after": ["g", "g", "V", "G"] },
    { "before": ["<C-d>"], "commands": ["editor.action.copyLinesDownAction"] },

    // --- Clipboard ---
    { "before": ["<leader>", "y"], "after": ["\"", "+", "y", "y"] },
    { "before": ["<leader>", "p"], "commands": ["editor.action.clipboardPasteAction"] },

    // --- Number Manipulation ---
    { "before": ["+"], "after": ["<C-a>"] },
    { "before": ["_"], "after": ["<C-x>"] },

    // --- File Permissions ---
    { "before": ["<leader>", "x"], "commands": [":!chmod +x %"], "silent": true },

    // --- Window Splits & Navigation ---
    { "before": ["<leader>", "w", "v"], "commands": ["workbench.action.splitEditorRight"] },
    { "before": ["<leader>", "w", "s"], "commands": ["workbench.action.splitEditorDown"] },
    { "before": ["<leader>", "w", "h"], "commands": ["workbench.action.focusLeftGroup"] },
    { "before": ["<leader>", "w", "l"], "commands": ["workbench.action.focusRightGroup"] },
    { "before": ["<leader>", "w", "k"], "commands": ["workbench.action.focusAboveGroup"] },
    { "before": ["<leader>", "w", "j"], "commands": ["workbench.action.focusBelowGroup"] },

    // --- File Management ---
    { "before": ["<leader>", "n", "f"], "commands": ["explorer.newFile"] },
    { "before": ["<leader>", "c", "x"], "commands": ["workbench.action.closeAllEditors"] },

    // --- Code Navigation ---
    { "before": ["<leader>", "g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["<leader>", "g", "r"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["K"], "commands": ["editor.action.showHover"] },

    // --- Search ---
    { "before": ["<leader>", "s", "a"], "commands": ["workbench.action.showCommands"] },
    { "before": ["<leader>", "s", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "s", "g"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["<leader>", "s", "b"], "commands": ["workbench.action.showAllEditors"] },

    // --- Code Actions ---
    { "before": ["<leader>", "c", "a"], "commands": ["editor.action.quickFix"] },

    // --- Debug ---
    { "before": ["<leader>", "r", "r"], "commands": ["workbench.action.debug.start"] },
    { "before": ["<leader>", "d", "d"], "commands": ["workbench.action.debug.start"] },
    { "before": ["<leader>", "d", "b"], "commands": ["editor.debug.action.toggleBreakpoint"] },
    { "before": ["<leader>", "d", "c"], "commands": ["workbench.action.debug.continue"] },
    { "before": ["<leader>", "d", "n"], "commands": ["workbench.action.debug.stepOver"] },
    { "before": ["<leader>", "d", "i"], "commands": ["workbench.action.debug.stepInto"] },
    { "before": ["<leader>", "d", "o"], "commands": ["workbench.action.debug.stepOut"] },
    { "before": ["<leader>", "d", "e"], "commands": ["editor.debug.action.selectionToWatch"] },
    { "before": ["<leader>", "d", "v"], "commands": ["workbench.debug.viewlet.action.addFunctionBreakpointAction"] },

    // --- UI & Window ---
    { "before": ["-"], "commands": ["workbench.view.explorer"] },
    { "before": ["<leader>", "t"], "commands": ["workbench.action.terminal.toggleTerminal"] },
    { "before": ["<leader>", "`"], "commands": ["workbench.action.toggleMaximizedPanel"] },
    { "before": ["<leader>", "d", "f"], "commands": ["workbench.action.toggleZenMode"] },

    // --- Local History ---
    { "before": ["<leader>", "u"], "commands": ["local-history.showAll"] },

    // --- Commenting ---
    { "before": ["g", "c", "c"], "commands": ["editor.action.commentLine"] },
    { "before": ["g", "b", "c"], "commands": ["editor.action.blockComment"] }
  ],

  // ======================
  // Visual Mode Keybindings
  // ======================
  "vim.visualModeKeyBindingsNonRecursive": [
    // --- Select / Duplicate ---
    { "before": ["<C-a>"], "after": ["g", "g", "V", "G"] },
    { "before": ["<C-d>"], "commands": ["editor.action.copyLinesDownAction"] },

    // --- Clipboard ---
    { "before": ["<leader>", "y"], "after": ["\"", "+", "y", "<Esc>"] },
    { "before": ["<leader>", "p"], "commands": ["editor.action.clipboardPasteAction"], "after": ["<Esc>"] },

    // --- Commenting ---
    { "before": ["g", "c", "c"], "commands": ["editor.action.commentLine"], "after": ["<Esc>"] },
    { "before": ["g", "b", "c"], "commands": ["editor.action.blockComment"], "after": ["<Esc>"] },

    // --- Visual Mode Line Movement ---
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction", "editor.action.formatSelection"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction", "editor.action.formatSelection"] },

    // --- Hover ---
    { "before": ["K"], "commands": ["editor.action.showHover"], "after": ["<Esc>"] }
  ],

  // ======================
  // Alt+V for Toggle Vim
  // ======================
  "vim.otherModesKeyBindingsNonRecursive": [
    { "before": ["<A-v>"], "commands": ["workbench.action.toggleVimMode"] }
  ]
}



